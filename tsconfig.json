{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./public/",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.iterable",
            "es6"
        ],
        // "types": [
        //     "reflect-metadata"
        // ],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}